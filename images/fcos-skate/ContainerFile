FROM quay.io/fedora/fedora-coreos:stable


RUN mkdir -p \
    rpm-ostree install \
    rsyslog \
    wget \
    keepalived && \
    # set registry short name mode to permissive
    sed -i 's|^[\#]\?short-name-mode\s\?=.*|short-name-mode=\"permissive\"|g' /etc/containers/registries.conf && \
    ostree container commit
